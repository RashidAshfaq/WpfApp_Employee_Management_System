<Window x:Class="WpfAppAppliedPortion.Views.EmployeeForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Employee Form" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name:" />
            <TextBox Name="NameTextBox" />
            <TextBlock Text="Address:" />
            <TextBox Name="AddressTextBox" />
            <TextBlock Text="Email:" />
            <TextBox Name="EmailTextBox" />
            <TextBlock Text="Phone:" />
            <TextBox Name="PhoneTextBox" />
            <TextBlock Text="Role:" />
            <TextBox Name="RoleTextBox" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Name="SaveButton" Content="Save" Click="SaveButton_Click" Margin="5" />
                <Button Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Margin="5" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
