<Window x:Class="WpfAppAppliedPortion.Views.PayrollForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Payroll Form" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Employee ID:" />
            <TextBox Name="EmployeeIDTextBox" />
            <TextBlock Text="Hours Worked:" />
            <TextBox Name="HoursWorkedTextBox" />
            <TextBlock Text="Hourly Rate:" />
            <TextBox Name="HourlyRateTextBox" />
            <TextBlock Text="Date:" />
            <DatePicker Name="DatePicker" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Name="SaveButton" Content="Save" Click="SaveButton_Click" Margin="5" />
                <Button Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Margin="5" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
